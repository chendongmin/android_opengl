<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_liner7_2"
    >
    
	<RadioGroup 
        android:id="@+id/RadioGroup7_2" 
        android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
		  <TextView 
		  	android:text="拉  伸  方  式 ：" 
		  	android:id="@+id/textView7_2_1" 
		  	android:textSize="16dip"
		  	android:layout_width="wrap_content" 
		  	android:layout_height="wrap_content">
		  </TextView>
	      <RadioButton 
	         android:text="EDGE" 
	         android:id="@+id/edge7_2_1" 
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>   
	      <RadioButton 
	         android:text="REPEAT" 
	         android:id="@+id/repeat7_2_1"
	         android:checked="true" 
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>  
	</RadioGroup>
    
   <RadioGroup 
        android:id="@+id/RadioGroup7_2_2" 
        android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
       	  <TextView android:text="纹理坐标尺寸：" 
       	  	android:id="@+id/textView7_2_2" 
       	  	android:textSize="16dip"
       	  	android:layout_width="wrap_content" 
       	  	android:layout_height="wrap_content">
       	  </TextView>
	      <RadioButton 
	         android:text="1x1" 
	         android:id="@+id/x11" 
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>   
	      <RadioButton 
	         android:text="4x2" 
	         android:id="@+id/x42" 
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>  
	      <RadioButton 
	         android:text="4x4" 
	         android:id="@+id/x44" 
	         android:checked="true"
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton> 
	</RadioGroup>	  
</LinearLayout>
